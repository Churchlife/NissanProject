</fieldset>
<script>
    function Begin() {
        $(this).text('Processing...');
    }
    function Complete() {
        var $self = $(this);
        $self.text('Done!');
        var $id = $self.attr('id');
        window.location.href = '/TestDriven/GetJobDriveCards/';
    }
        function Failure() {
            var $self = $(this);
            $self.removeClass('btn-primary');
            $self.addClass('btn-danger');
            $self.text('Failed!');
        }
</script>





